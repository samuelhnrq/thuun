{
  "$schema": "https://biomejs.dev/schemas/1.9.3/schema.json",
  "formatter": {
    "enabled": true,
    "indentStyle": "space",
    "indentWidth": 2
  },
  "linter": {
    "enabled": true,
    "rules": {
      "all": true,
      "correctness": {
        "useImportExtensions": "off"
      },
      "style": {
        "noNamespace": "off",
        "noDefaultExport": "off",
        "useNamingConvention": {
          "level": "warn",
          "options": {
            "enumMemberCase": "CONSTANT_CASE",
            "strictCase": false
          }
        }
      }
    }
  },
  "organizeImports": {
    "enabled": true
  },
  "files": {
    "include": [
      "src/**/*.tsx",
      "src/**/*.ts",
      "src/**/*.css",
      "tailwind.config.ts",
      "drizzle.config.ts",
      "app.config.ts"
    ],
    "ignore": ["node_modules", ".output", ".vinxi"]
  }
}
